<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResignActivity">

    <EditText
        android:id="@+id/reign_name"
        android:hint="@string/log_name"
        android:inputType="text"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/baseline_person_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"/>

    <EditText
        android:id="@+id/resign_word"
        android:drawableStart="@drawable/baseline_key_24"
        android:hint="@string/log_password"
        android:inputType="textPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reign_name"/>

    <Button
        android:id="@+id/resign"
        android:text="@string/resign"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/blue"
        android:layout_width="150dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/resign_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/tologin"
        android:text="@string/tologin"
        android:textColor="@color/blue"
        android:background="@color/Twhite"
        android:gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resign"/>
</androidx.constraintlayout.widget.ConstraintLayout>